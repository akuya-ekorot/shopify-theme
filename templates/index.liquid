<section class="nav">
    <a href="/">
      <img src="https://cdn.shopify.com/s/files/1/0612/9388/7745/files/logo-white.svg?v=1637837600" alt="SUED logo" class="logo"></img>
    </a>
</section>


<section class="product-grid">
  {% for product in collections.all-products.products %}
  
  	<a class="product" href="{{ product.url }}">
      <div>
        <img
             src="{{ product | image_url: width: 300 }}"
             alt="Nomad Cuff Timepiece by Sued Watches"
             class="product-image"
             height="300px"
             width="300px"
             />
        <div class="product-details">
          <p class="product-name">{{ product.title }}</p>
          <p class="product-price">KES {{ product.price }}</p>
        </div>
      </div>
  	</a>
  
  {% endfor %}
  
</section>

<script>
  var prices = document.querySelectorAll(".product-price");
  
  function updatePrice() {
    if(!prices) {
    	return;
  	} else {
    	for (var each of prices) {
      		each.innerText = each.innerText.slice(0, -2)
    	}
  	}
  }

  window.onload = function() {
	setTimeout(updatePrice, 50);
  }
  
</script>
